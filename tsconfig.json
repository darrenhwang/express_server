{
    "compilerOptions": {
        "target": "es5",
        // "module": "commonjs",
        // "outDir": "./hhw/",
        // "noEmit": true,
        "module": "system",
        "outFile": "./hhw/index.js",
        "strict": false,
        "esModuleInterop": true,
